<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AdastraONETask.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="spacingDefault">10dp</item>

        <item name="colorToolbar">?colorSurface</item>
        <item name="colorOnToolbar">?colorOnSurface</item>
        <item name="android:statusBarColor" tools:targetApi="l">?colorToolbar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="colorTypeBusywork">@color/colorTypeBusywork</item>
        <item name="colorTypeCharity">@color/colorTypeCharity</item>
        <item name="colorTypeCooking">@color/colorTypeCooking</item>
        <item name="colorTypeEducational">@color/colorTypeEducational</item>
        <item name="colorTypeMusic">@color/colorTypeMusic</item>
        <item name="colorTypeRecreational">@color/colorTypeRecreational</item>
        <item name="colorTypeRelaxation">@color/colorTypeRelaxation</item>
        <item name="colorTypeSocial">@color/colorTypeSocial</item>

        <item name="drawerArrowStyle">@style/Theme.AdastraONETask.ArrowStyle</item>
        <item name="overlapAnchor">false</item>

        <item name="colorDivider">?colorOnSurface</item>
    </style>

    <style name="Theme.AdastraONETask.Default" parent="Theme.AdastraONETask.Base">
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryVariant">@color/light_colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/light_colorSecondary</item>
        <item name="colorSecondaryVariant">@color/light_colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.AdastraONETask.SplashTheme" parent="Theme.AdastraONETask.Default">
        <item name="android:windowBackground">@drawable/splashscreen_icon</item>
        <item name="android:navigationBarColor">@color/light_colorPrimary</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_colorPrimary</item>
    </style>

    <style name="TextAppearance.AdastraONETask.Large" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="TextAppearance.AdastraONETask.Medium" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="TextAppearance.AdastraONETask.Small" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Theme.AdastraONETask.ArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?colorOnToolbar</item>
    </style>
</resources>